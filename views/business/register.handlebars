        <header>
            <div class="header-content col-xs-4">
                <h2 class="regTitleColor">Create an Account</h2>
                <form  method="post" action="" enctype="application/x-www-form-urlencoded">
                    <input class="regis centerForm" type="text" name="companyName" value="{{ companyName }}" placeholder="SexyGeoHatters" required>
                    <input class="regis centerForm" type="text" name="fname" value="{{ fname }}" placeholder="Bald" required>
                    <input class="regis centerForm" type="text" name="lname" value="{{ lname }}" placeholder="Peter" required>
                    <input class="regis centerForm" type="email" name="email" value="{{ email }}" placeholder="youremail@domain.com" required>
                    <input class="regis centerForm" type="tel" pattern="\d{3}[\-]\d{3}[\-]\d{4}" name="phone" value="{{ phone }}" 
                    placeholder="Enter your number as xxx-xxx-xxxx" required>
                    <input class="regis centerForm" type="password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,17}$" 
                    name="password" value="{{ password }}" placeholder="8-17 char, at least 1 upper, 1 lower, 1 number" required>
                    <input class="btn btn-primary btn-x2 page-scroll sign1Btn" name="submit" type="submit" onclick="sign1Click()" value="Sign Up">
                </form>
            </div>
        </header>
        <footer class = "text-center navbar-fixed-bottom">
            <div class="footer-below">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            Copyright &copy; SexyGeoHatters All Rights Reserved.
